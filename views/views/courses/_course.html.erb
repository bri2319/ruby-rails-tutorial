<div class="col">
  <div class="card h-100 shadow-sm">
    <div class="card-body">
      <h5 class="card-title"><%= course.title %></h5>
      <p class="card-text"><%= course.description %></p>
      <p class="card-text"><strong>Skills:</strong> <%= course.skills %></p>
    </div>


    <div class="card-footer bg-white border-top-0 d-flex flex-column gap-2">
      

      <%# <%= link_to "View Course", course_path(course), class: "btn btn-outline-primary btn-sm" %>


      <% if authenticated? %>
        <div class="d-flex gap-2">
          <%= link_to "Edit", edit_course_path(course), class: "btn btn-primary btn-sm" %>
          <%= button_to "Delete", course, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>