<% cache @trip do %> 
  <div class="container my-4">
    <div class="row">
      






      <!-- Text content (left) -->
      <div class="col-md-6">
        <h1><%= @trip.name %></h1>
        <p><%= @trip.description %></p>



<!-- Buttons Section -->
<div class="container mb-4">
  <div class="d-flex flex-column align-items-start gap-2">
    <%= link_to "Back", root_path , class: "btn btn-secondary" %>

    <% if authenticated? %>
      <div class="d-flex gap-2">
        <%= link_to "Edit", edit_trip_path(@trip), class: "btn btn-primary" %>
        <%= button_to "Delete", @trip, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div> 


      </div>

<!-- Image (right) -->
      <% if @trip.featured_image.attached? %>
        <div class="col-md-6 text-end">
          <%= image_tag @trip.featured_image, class: "img-fluid rounded", style: "max-height: 400px;" %>
        </div>
      <% end %>





      
    </div>
  </div>
<% end %>

